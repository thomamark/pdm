      INIT_GAME = false; //var defined in maze.js which
			var selectedId;
			var selectedImg;
			var selectedObj;
			var startPos;
      var IMGS;
			var OBJS;
			var oldR =-1;
			var oldC = -1;
			var MOUSE_DOWN = false;
			//var canvasX = -1;
