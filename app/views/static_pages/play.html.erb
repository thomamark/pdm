<!DOCTYPE html>
<% content_for :header do %>
<% end %>

        <!-- note that all audio functionality is controlled with custom js -->
        <audio id="theme" preload="auto">
            <source src="audio/theme.mp3" type="audio/mp3" />
            <source src="audio/theme.ogg" type="audio/ogg" />
            Oops! Your broswer does not support HTML 5 audio! Get with it, install the latest version of Chrome, Firefox, Opera, or Safari and start playing!
        </audio>
        <audio id="defeat" preload="auto">
            <source src="audio/defeat.mp3" type="audio/mp3" />
            <source src="audio/defeat.ogg" type="audio/ogg" />
        </audio>
        <audio id="pick_up" preload="auto">
            <source src="audio/pick_up.mp3" type="audio/mp3" />
            <source src="audio/pick_up.ogg" type="audio/ogg" />
        </audio>
        <audio id="victory" preload="auto">
            <source src="audio/victory.mp3" type="audio/mp3" />
            <source src="audio/victory.ogg" type="audio/ogg" />
        </audio>
        <div id="title">
                <p>Panda Dragon Maze v0</p>
        </div>
        <div id="left-col" style="width:250px; float:left">
                <h3>Total Score: <span id="total_score">0</span></h3>
                <h3 style="color:green">Level Score: <span id="level_score">0</span></h3>
            <h3>Speed</h3>
            <input id="speed_0" type="radio" name="speed" value="5"> <label for="speed_0">Hyperspeed</label><br>
            <input id="speed_1" type="radio" name="speed" value="10" checked> <label for="speed_1">Mere mortal</label><br>
            <input id="speed_2" type="radio" name="speed" value="15"> <label for="speed_2">Senior citizen</label><br>
            <h3>Sound</h3>
            <input id="ctrl_fx" type="checkbox" name="soundfx" value="FX" checked="true"/> <label for="ctrl_fx">Sound effects</label> <br/>
            <input id="ctrl_music" type="checkbox" name="music" value="music" checked="true"/> <label for="ctrl_music">Music</label>
        
        </div>
        <div id="game-content">
                <canvas id="tile-canvas" style="z-index: 1; position:absolute; left:251px; top:0px;"></canvas>
                <canvas id="maze-canvas-background" style="z-index: 2; position:absolute; left:251px; top:0px;"></canvas>
                <canvas id="maze-canvas" style="z-index: 3; position:absolute; left:251px; top:0px;"></canvas>
        </div>
