@font-face {
  font-family: StarPerv;
  src: url(<%= asset_path('StarPerv.ttf') %>);
}

body {
    font-family: StarPerv;
    font-size: 14pt;
    color: #333333;
	position: absolute;
	top: 0;
	left: 0;
	float: left;
	clear: none;
	width: 100%;
	height: 790px;
	z-index: 1;
	/* background: url('../img/grid_tile.png'); */
	overflow: hidden;
	background-position: center;
}

.canvas {
  position: absolute;
  top: 20px;
  left: 0px;
  width: 900px;
  height: 500px;
}

.ops_panel{
  position: absolute;
  top: 80px;
  left: 288px;
  width: 472px;
}

.ops_panel h4 {
  margin-bottom: 0px;
}

#scorebar {
  position: absolute;
  top: 0px;
  left: 0px;
  font-size: 12pt;
  width: 900px;
}
.scorebox {
  float: left;
  width: 300px;
  text-align: center;
}

#level_score {
  color: #00CC33;
}


/* Options */

#lightbox {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: none;
  z-index: 999;
  position: absolute;
  top: 0px;
  left: 0px;
}

.optionsFooter{
  float: left;
  margin-top: 40px;
  width: 100%;
}

#options_done {
  color: blue;
  width: 70%;
  display: inline-block;
}

#quit {
  color: red;
}

input[type='checkbox'],
input[type='radio']{
  opacity: 0;

  width: 17px;
  height: 18px;
}

input[type='checkbox'] + label,
input[type='radio'] + label {
  padding-left: 24px;
  width: 19px;
 background: url(<%= asset_path('check_box_N_sm.png') %>) 0 0px no-repeat;
}

input[type='checkbox']:checked + label,
input[type='radio']:checked + label {
  padding-left: 24px;
  clear: none;
  width: 19px;
 background: url(<%= asset_path('check_box_Y_sm.png') %>) 0 0px no-repeat;
}

.color-blue{background-position:0 0;}
.color-orange{background-position:0 -28px;}
.color-green{background-position:0 -56px;}
.color-pink{background-position:0 -84px;}
.color-red{background-position:0 -112px;}
.color-yellow{background-position:0 -140px;}
.color-grey{background-position:0 -168px;}
.color-brown{background-position:0 -225px;}
