@font-face {
  font-family: "StarPerv";
  src: url(<%= asset_path('StarPerv.ttf') %>);
}

body {
    font-family: StarPerv;
    font-size: 14pt;
    color: #333333;
	background-color: black;
	position: absolute;
	top: 0;
	left: 0;
	float: left;
	clear: none;
	width: 100%;
	height: 500px;
	z-index: 1;
	margin: 0;
	/* background: url('../img/grid_tile.png'); */
	overflow: hidden;
	background-position: center;
}

.canvas {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 900px;
  height: 500px;
}

#game-content {
	top: 0px;
	position: relative;
	margin: auto;
}

#scorebar {
  position: absolute;
  top: 4px;
  left: 0px;
  font-size: 12pt;
  width: 900px;
	height: 78px;
	color: #fff;
  text-shadow: 1px 1px 1px #000;
  background: url(<%= asset_path('scoreboardBg.png') %>);
  background-repeat: no-repeat;
}

.scorebar ul div {
	display: inline;
	padding-top: 10px;
	padding-left: 10px;
	float: left;
	list-style: none;
	margin: 0px;
	z-index: 1;
}

.scorebar li {
		padding-top: 0px;
		float: left;
		display: inline;
}

.no-display {
	display: none;
}

.hidden {
	visibility: hidden;
}

.scorebox {
  float: left;
  width: 300px;
  text-align: center;
}

#level_score {
  color: #00CC33;
}

.alert {
	padding: 10px;
	color: #fff;
}

#alert-container{
	width: 100%;
	height: 100%;
	vertical-align: center;
}

.alert-button {
	text-decoration: none;
	float: right;
	clear: both;
	color: #fff;
	padding-right: 50px;
}

#go {
	width: 470px;
	height: 425px;
  background: rgba(0,0,0,0.75);
  z-index: 999;
	margin: auto;
  padding: 10px;
  position: relative;
  top: -450px;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  border-radius: 10px; /* future proofing */
  -khtml-border-radius: 10px;
}

input[type=text].go {
	border: none;
	background-color: transparent;
	font-size: 32px;
	letter-spacing: 20px;
	width: 380px;
	font-family: StarPerv;
}

input[type=text].go:focus {
	outline-width: 0;
}


.go {
  color: #fff;
}

.go h1 {
  color: #ff0000;
}

.center {
  margin: auto;
  text-align: center;
}

.gold-text {
  color: #FFFF00;
}

#coverage {
  font-weight: bold;
  font-size: 32px;
  margin: 10px 0px 10px 0px;
}

.go-message {
  width: 380px;
  float: left;
}

.go-message p {
  margin-top: 10px;
}

#go-ok {
  float: left;
  max-width: 70px;
  max-height: 56px;
}


/* Options */

.lightbox {
  background: rgba(0,0,0,0.5);
  z-index: 10;
}

#lightbox {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
}

#options-list-container {
width: 100%;
height: 128px;  
}

#options-container {
  position: absolute;
  top: 20px;
  left: 0px;
  width: 900px;
  height: 128px;
  background: url(<%= asset_path('optionsHeaderBg.png') %>);
  z-index: 15;
}

.options ul {
	width: 100%;
	height: 100%;
	list-style: none; 
	line-height: 128px;
	display: inline;
	margin: 0px;
}

.options img {
	vertical-align: middle;
}

.options li {
	float: left;
	width: 64px;
	height: 128px;
	text-align: center;
	line-height: 128px;
	padding: 0px 0px 0px 64px;
}


