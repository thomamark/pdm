	try {
		stage.drawImage($obj.img,x,y, $obj.img.width*SPRITE_SCALE, $obj.img.height*SPRITE_SCALE);
	} catch($error) {}
}

/* Only used in Isometric mode */
function getScreenX($x,$y) {
	var x=(($x-$y)*COS)+X_ORIGIN;
	//var x=(($x-$y)*COS);
	return x;
}

function getScreenY($x,$y) {
	var y=Y_ORIGIN-(($x+$y)*SIN);
	//var y=(($x+$y)*SIN);
	return y;
}

